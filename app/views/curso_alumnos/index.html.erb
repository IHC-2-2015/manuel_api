<h1>Listing Curso Alumnos</h1>

<table>
  <thead>
    <tr>
      <th>Curso</th>
      <th>Alumno</th>
      <th>Ayudante</th>
      <th>Estado</th>
      <th>Jefe Proyecto</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @curso_alumnos.each do |curso_alumno| %>
      <tr>
        <td><%= curso_alumno.curso.nombre %></td>
        <td><%= curso_alumno.alumno.nombre %></td>
        <td><%= curso_alumno.ayudante %></td>
        <td><%= curso_alumno.estado %></td>
        <td><%= curso_alumno.jefe_proyecto %></td>
        <td><%= link_to 'Show', curso_alumno %></td>
        <td><%= link_to 'Edit', edit_curso_alumno_path(curso_alumno) %></td>
        <td><%= link_to 'Destroy', curso_alumno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

